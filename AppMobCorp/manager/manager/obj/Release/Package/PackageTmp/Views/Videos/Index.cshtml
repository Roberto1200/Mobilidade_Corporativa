@using Manager.Models
@model PagedList.IPagedList<Video>
@{
    ViewBag.Title = "Vídeos";
    //List<Video> VideoList = (List<Video>)ViewBag.Data;
}


<div id="content-header">
    <h1>Vídeos</h1>
</div>

<div id="breadcrumb">
    <a href="~/Home" title="Ir para página inicial" class="tip-bottom"><i class="glyphicon glyphicon-home"></i>Home</a>
    <a href="#" class="current">@ViewBag.Title</a>
</div>

<div class="row">
    <div class="col-12">

        <button style="margin-bottom:6px; margin-top:6px; float:right; padding-left:4px; padding-right:4px;" class="btn btn-success btn-sm" onclick="Editar(0)">
            <i class="fa fa-edit"></i> Inserir Registro
        </button>


        <div class="widget-box">
            <div class="widget-title">
                <span class="icon">
                    <i class="glyphicon glyphicon-th"></i>
                </span>
                <h5>Lista de registros cadastrados</h5>
            </div>
            <div class="widget-content">
                @using (Html.BeginForm("Index", "Videos", FormMethod.Get))
                {

                    @Html.TextBox("procura", ViewBag.CurrentFilter as string, new { @class = "glyphicon glyphicon-search" })
                    <button class="btn btn-default"><i class="glyphicon glyphicon-search"></i> Buscar</button>

                }
            </div>
            <div class="widget-content nopadding">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Vídeo</th>
                            <th>Imagem</th>
                            <th nowrap>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            foreach (var row in Model)
                            {
                                <tr class="gradeX">
                                    <td>@string.Format("{0}{1}", row.titulo.Substring(0, Math.Min(@row.titulo.Length, 47)), (@row.titulo.Length >= 47 ? "..." : null))</td>
                                    <td>@string.Format("{0}{1}", row.video.Substring(0, Math.Min(@row.video.Length, 47)), (@row.video.Length >= 47 ? "..." : null))</td>
                                    <td data-zoom-image='@Url.Content("~/Upload/Videos/"+@row.imagem)'
                                        style="width:150px;
                                    background-repeat:no-repeat;
                                    background-position:center; height:50px;
                                    background-size:contain;
                                    background-image:url('@Url.Content("~/Upload/Videos/"+@row.imagem)')"></td>
                                    <td>@row.str_status</td>
                                    <td>
                                        @Html.Partial("../Shared/_EditDeleteControl", row.id.ToString() + ",0,0")
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="gradeX">
                                <td colspan="7" align="center">
                                    Nenhum registro disponível
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                @if (Model.PageCount > 1)
                {
                    <div>
                        @Html.PagedListPager(Model, pagina => Url.Action("Index", "Videos", new { pagina, currentFilter = ViewBag.CurrentFilter }))
                    </div>
                }
            </div>
        </div>
    </div>
</div>







@Html.Partial("../Shared/_EditDeleteScript", "Videos")