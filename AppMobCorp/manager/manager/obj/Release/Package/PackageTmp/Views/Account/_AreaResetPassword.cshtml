@model Manager.Models.ResetPasswordModel


@{
    string tipo = Request.QueryString["tipo"];
    string email = Request.QueryString["email"];
}

@using (Html.BeginForm("RecAdminSenha", "WS", FormMethod.Post, new { enctype = "multipart/form-data", id = "resetpasswordform" }))
{
    @Html.AntiForgeryToken()
    <div>
        <p>Digite a nova senha.</p>
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Nova Senha", type = "password", id = "newpassword", maxlength = "16" })
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar Senha", type = "password", id = "confirmarsenha", maxlength = "16" })
        </div>        
        
        @Html.HiddenFor(m => m.Email, new { id = "emailNewPassword" })
        @Html.HiddenFor(m => m.Token, new { id = "tokenNewPassword" })
        
        <div id="validationResetPassword" class="validation-area" style="display:none;">

        </div>
        
        <hr />
        <div class="form-actions">
            <div class="pull-left">
                <a href="#" class="flip-link to-login">&laquo; Voltar ao login</a><br />
            </div>
            <div class="pull-right">
                <input id="SalvSenha" type="submit" class="btn btn-default" value="Enviar" />
            </div>
        </div>
    </div>
}