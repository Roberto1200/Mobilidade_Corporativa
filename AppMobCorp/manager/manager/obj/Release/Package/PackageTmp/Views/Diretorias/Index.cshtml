@using Manager.Models
@model PagedList.IPagedList<Diretoria>
@{
    ViewBag.Title = "Diretorias";
}

@Html.Partial("../Shared/LayoutLists/_Breadcrumb")

<div class="row">
    <div class="col-12">

        @Html.Partial("../Shared/LayoutLists/_InsertRecordButton")

        <div class="widget-box">
            <div class="widget-title">
                <span class="icon">
                    <i class="glyphicon glyphicon-th"></i>
                </span>
                <h5>Lista de registros cadastrados</h5>
            </div>
            <div class="widget-content">
                @using (Html.BeginForm("Index", "Diretorias", FormMethod.Get))
                {

                    @Html.TextBox("procura", ViewBag.CurrentFilter as string, new { @class = "glyphicon glyphicon-search" })
                    <button class="btn btn-default"><i class="glyphicon glyphicon-search"></i> Buscar</button>

                }
            </div>
            <div class="widget-content nopadding">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            @*<th style="text-align: left;visibility:hidden">ID</th>*@
                            <th>Nome</th>
                            <th nowrap width="20%">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            foreach (var row in Model)
                            {
                                <tr class="gradeX">
                                    @*<td>@row.id</td>*@
                                    <td>@row.diretoria</td>
                                    <td>@Html.Partial("../Shared/_EditDeleteControl", row.id.ToString() + ",0,0")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="gradeX">
                                <td colspan="7" align="center">
                                    Nenhum registro disponível
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (Model.PageCount > 1)
                {
                    <div>
                        @Html.PagedListPager(Model, pagina => Url.Action("Index", "Diretorias", new { pagina, currentFilter = ViewBag.CurrentFilter }))
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@Html.Partial("../Shared/_EditDeleteScript", "Diretorias")
@Html.Partial("../Shared/_ImportXLSScript", "Diretorias")