@model Manager.Models.ForgotPasswordModel


@using (Html.BeginForm("RecAdminSenha", "WS", FormMethod.Post, new { enctype = "multipart/form-data", id = "recoverform" }))
{
    @Html.AntiForgeryToken()
    <p>Digite seu endereço de e-mail que enviaremos as instruções para recuperação de sua senha.</p>

    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon glyphicon-envelope"></i>
        </span>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-Mail", id = "email", maxlength = "40" })

        @*@Html.TextBox("tipo", "0", new { style = "display:none" })*@
    </div>

    <div id="msgLoading" class="input-group pull-right" style="display:none;">
        <i class="fa fa-spinner fa-pulse fa-lg fa-fw"></i>
        <span>Enviando instruções, aguarde...</span>
    </div>

    <div id="validationForgotPassword" class="validation-area" style="display:none;">

    </div>

    <br />

    <hr />

    <div class="form-actions">
        <div class="pull-left">
            <a href="#" class="flip-link to-login">&laquo; Voltar ao login</a><br />
        </div>

        <div class="pull-right">
            <a href="#" class="btn btn-default flip-link to-token">Enviar</a>
        </div>

    </div>

}
