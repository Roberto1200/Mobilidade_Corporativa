@model Manager.Models.Forum_Canal

@using (Html.BeginForm("Update", "Forum", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model=>model.id)
    <div style="height:15px"></div>

    <div class="form-group">
        <label class="col-sm-3 col-md-3 col-lg-2 control-label">Título</label>
        <div class="col-sm-9 col-md-9 col-lg-10">
            @Html.TextBoxFor(model=>model.titulo,new { @class="form-control input-sm"})
        </div>
        <div class="col-sm-offset-3 col-lg-offset-2 col-sm-9 col-lg-10">
            @Html.ValidationMessageFor(model => model.titulo)
        </div>
    </div>
    
    
    

     <div class="form-actions">
        <button type="submit" class="btn btn-primary btn-sm">Salvar</button>
         <a class="btn btn-warning" href="~/Foruns">Cancelar</a>
    </div>
}