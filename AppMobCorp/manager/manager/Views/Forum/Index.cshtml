@using Manager.Models
@model PagedList.IPagedList<Forum_Canal>
@{
    ViewBag.Title = "Fórum - Canais";
}


<div id="content-header">
    <h1>@ViewBag.Title</h1>

</div>

<div id="breadcrumb">
    <a href="~/Home" title="Ir para página inicial" class="tip-bottom"><i class="glyphicon glyphicon-home"></i>Home</a>
    <a href="#" class="current">@ViewBag.Title</a>
</div>



<div class="row">
    <div class="col-12">

        <button style="margin-bottom:6px; margin-top:6px; float:right; padding-left:4px; padding-right:4px;" class="btn btn-success btn-sm" onclick="EditarForumCanal(0)">
            <i class="fa fa-edit"></i> Inserir Registro
        </button>

        <div class="widget-box">
            <div class="widget-title">
                <span class="icon">
                    <i class="glyphicon glyphicon-th"></i>
                </span>
                <h5>Lista de registros cadastrados</h5>
            </div>
            <div class="widget-content">
                @using (Html.BeginForm("Index", "Forum", FormMethod.Get))
                {

                    @Html.TextBox("procura", ViewBag.CurrentFilter as string, new { @class = "glyphicon glyphicon-search" })
                    <button class="btn btn-default"><i class="glyphicon glyphicon-search"></i> Buscar</button>

                }
            </div>
            <div class="widget-content nopadding">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th nowrap>Tópicos</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            foreach (var row in Model)
                            {
                                <tr class="gradeX">
                                    <td>@row.titulo</td>
                                    <td>@row.quantidade &nbsp; &nbsp; @Html.Partial("../Shared/_ViewControl", row.id.ToString() + ",ForumCanal,0")</td>
                                    <td>
                                        @Html.Partial("../Shared/_EditDeleteControl", row.id.ToString() + ",0,ForumCanal")
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="gradeX">
                                <td colspan="7" align="center">
                                    Nenhum registro disponível
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                @if (Model.PageCount > 1)
                {
                    <div>
                        @Html.PagedListPager(Model, pagina => Url.Action("Index", "Forum", new { pagina, currentFilter = ViewBag.CurrentFilter }))
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@Html.Partial("../Shared/_EditDeleteScript", "Forum")