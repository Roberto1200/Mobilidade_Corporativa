@model string
@{
    string[] verificar = Model.Split(',');

    if (verificar[2] == "CanaisDigitais")
    {
        <button class="btn btn-success btn-sm" onclick="Editar(@verificar[0],@verificar[1])">
            <span class="visible-md visible-lg"><i class="fa fa-pencil"></i> Editar</span>
            <span class="hidden-md hidden-lg"><i class="fa fa-pencil"></i></span>
        </button>
    }
    else if (verificar[2] == "Cat")
    {
        <button class="btn btn-success btn-sm" onclick="EditarCat(@verificar[0],@verificar[1])">
            <span class="visible-md visible-lg"><i class="fa fa-pencil"></i> Editar</span>
            <span class="hidden-md hidden-lg"><i class="fa fa-pencil"></i></span>
        </button>
        <a href="#" id="bootbox-confirm" onclick="ConfirmarCat(@verificar[0],@verificar[1])" class="btn btn-danger">
            <span class="visible-md visible-lg"><i class="fa fa-remove"></i> Excluir</span>
            <span class="hidden-md hidden-lg"><i class="fa fa-remove"></i></span>
        </a>
    }
    else if (verificar[2] == "Cont")
